# Environment Configuration for Pharmacy Inventory System
# Copy this file to .env and update the values for production use

# Django Settings
SECRET_KEY=your-super-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database (for production, consider PostgreSQL)
DATABASE_URL=sqlite:///db.sqlite3

# Email Configuration (for alerts and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=pharmacy@yourcompany.com

# Pharmacy Information
PHARMACY_NAME=Your Pharmacy Name
PHARMACY_ADDRESS=Your Pharmacy Address
PHARMACY_PHONE=+1-234-567-8900
PHARMACY_LICENSE=LICENSE123456

# Backup Settings
BACKUP_ENABLED=True
BACKUP_DIRECTORY=/path/to/backups

# Alert Thresholds
LOW_STOCK_ALERT_DAYS=7
EXPIRY_ALERT_DAYS=30

# Security (Production Only)
# These should be set to True only when using HTTPS
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0